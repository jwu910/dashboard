{
	"name": "dashboard",
	"version": "1.0.0",
	"description": "Liferay IS Dashboard built on top of https://github.com/protoEvangelion/dashboard",
	"main": "pages/index.js",
	"private": true,
	"scripts": {
		"dev": "next",
		"build": "next build",
		"start": "next start -p $PORT",
		"lint": "standard --verbose | snazzy && stylelint '**/*.js'",
		"test": "npm run lint"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/protoEvangelion/dashboard.git"
	},
	"keywords": [
		"tv",
		"dashboard"
	],
	"author": "Daniel Bayerlein",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/protoEvangelion/dashboard/issues"
	},
	"homepage": "https://github.com/protoEvangelion/dashboard#readme",
	"dependencies": {
		"axios": "^0.18.0",
		"babel-plugin-styled-components": "^1.10.0",
		"dotenv-webpack": "^1.7.0",
		"graphql-request": "^1.8.2",
		"isomorphic-unfetch": "^3.0.0",
		"js-base64": "^2.5.1",
		"next": "^8.0.1",
		"polished": "^3.0.0",
		"react": "^16.8.2",
		"react-dom": "^16.8.2",
		"styled-components": "^4.1.3",
		"tinytime": "^0.2.6",
		"twas": "^2.1.0",
		"yup": "^0.26.10"
	},
	"devDependencies": {
		"babel-eslint": "^10.0.1",
		"dotenv": "^6.2.0",
		"express": "^4.16.4",
		"prettier": "^1.16.4",
		"snazzy": "^8.0.0",
		"standard": "^12.0.1",
		"stylelint": "^9.10.1",
		"stylelint-config-standard": "^18.2.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-processor-styled-components": "^1.5.2"
	},
	"standard": {
		"parser": "babel-eslint"
	},
	"babel": {
		"presets": [
			"next/babel"
		],
		"plugins": [
			[
				"styled-components",
				{
					"ssr": true,
					"displayName": true,
					"preprocess": false
				}
			]
		]
	},
	"stylelint": {
		"processors": [
			"stylelint-processor-styled-components"
		],
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-styled-components"
		],
		"syntax": "scss"
	}
}
